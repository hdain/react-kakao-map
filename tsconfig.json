{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext",
      "dom.iterable",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "incremental": true,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "paths": {
      "@types/*": ["./@types/*"],
    }
  },
  "include": [
    "./src", "./@types"
  ],
  "exclude": [
    "node_modules",
  ]
}
